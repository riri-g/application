<div class="row mt-5 w-50">
<meta name="viewport" content="width=device-width,initial-scale=1">
<% users.each do |user| %>
<div class="one-post card mt-3">
  <%= link_to user_path(user) do %>
  <div class="d-flex align-items-center">
    <%= attachment_image_tag user, :profile_image, size: '80x80', fallback: "no_image.svg", class: "mt-3 profile-img" %>
    <p class="caption h4 mt-4 mr-2"><%= user.name %></p>
     <p class="caption h4 mt-4 mr-2"><%= "#{user.posts.count} 投稿" %></p>
  </div>
 
  <% end %>
</div>
<% end %>
</div>
<%= paginate users %>