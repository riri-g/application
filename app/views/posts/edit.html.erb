<div class="cover-new">
  <div class="container-fluid d-flex flex-column align-items-center">
    <div class="row mt-5">
      <h1 class="font-weight-normal">編集する</h1>

      <% if @post.errors.any? %>
        <div class="card text-center text-white bg-danger mb-3">
          <p><%= @post.errors.count %> 件のエラーが発生しました:</p>
          <ul class="mb-0">
            <% @post.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_with model: @post, local: true do |f| %>
        <div class="form-group mb-3">
          <label class="form-label">【直売所名】</label>
          <%= f.text_field :location, class: "form-control", placeholder: "直売所名を入力してください" %>
        </div>
        
        <div class="form-group mb-3">
          <label class="form-label">【住所】</label>
          <%= f.text_field :address, class: "form-control", placeholder: "住所を入力してください" %>
        </div>
        
        <div class="form-group mb-3">
          <label class="form-label">【感想】</label>
          <%= f.text_area :text, rows: 10, class: "form-control", placeholder: "感想を入力してください" %>
        </div>
        
        <div class="form-group mb-3">
          <label class="form-label">【カテゴリー】</label>
          <%= f.collection_select :category_id, Category.all, :id, :name, { prompt: '選択してください' }, class: "form-control" %>
        </div>
        
        <div class="form-group mb-3">
          <label class="form-label">【画像】</label><br>
          <%= f.file_field :image, class: "form-control-file" %>
        </div>
        
        <div class="form-group">
          <label class="form-label">【ステータス】</label>
          <%= f.select :status, Post.statuses.keys.map { |k| [t("enums.post.status.#{k}"), k] }, {}, class: "custom-select w-25 mb-3" %>
        </div>
        
        <%= f.submit '保存する', class: "btn btn-success" %>
        <%= link_to '投稿詳細ページへ', post_path(@post), class: "btn btn-dark mt-3" %>
      <% end %>
    </div>
  </div>
</div>